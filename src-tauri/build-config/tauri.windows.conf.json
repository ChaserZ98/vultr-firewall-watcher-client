{
    "identifier": "com.chaserz98.vultr-firewall-watcher",
    "bundle": {
        "windows": {
            "wix": {
                "language": ["en-US", "zh-CN"]
            },
            "nsis": {
                "displayLanguageSelector": true,
                "installMode": "both",
                "languages": ["English", "SimpChinese"],
                "installerIcon": "icons/icon.ico"
            }
        }
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Vultr Firewall Watcher",
                "width": 1280,
                "height": 720,
                "fullscreen": false,
                "resizable": true,
                "decorations": false,
                "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-features=msEdgeFluentOverlayScrollbar,msOverlayScrollbarWinStyle",
                "center": true
            }
        ],
        "security": {
            "capabilities": ["desktop"]
        }
    }
}
